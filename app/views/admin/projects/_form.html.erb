<% if @project.errors.any? %>
  <div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [:admin, @project] do |f| %>
 <div class="field form-group">
    <span class="col-sm-2 control-label"><b>Имя проекта<b></span> <br>
    <div class="col-sm-10">
      <%= f.text_field(:name, {:class => 'form-control'}) %>
    </div>
  </div>

  <div class="field form-group">
     <span class="col-sm-2 control-label"><b>Описание проекта<b></span> <br>
     <div class="col-sm-10">
       <%= f.text_area(:summary, {:class => 'form-control'}) %>
     </div>
   </div>

  <div class="field form-group">
    <span class="col-sm-2 control-label"><b>Дата старта<b></span> <br>
    <div class="col-sm-10">
      <%= f.date_field(:start_date, {:class => 'form-control'}) %>
    </div>
  </div>

  <div class="field form-group">
    <span class="col-sm-2 control-label"><b>Дата окончания<b></span> <br>
    <div class="col-sm-10">
      <%= f.date_field(:end_date, {:class => 'form-control'}) %>
    </div>
  </div>

<div class="main">
  <%= f.submit("Сохранить", {:class => 'btn btn-outline-success'}) %>

<% end %>
