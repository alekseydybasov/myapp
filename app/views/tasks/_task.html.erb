  <div class="col-sm-6">
      <div class="card">
        <div class="card-block tasks">
          <h3 class="card-title"><%= task.title %></h3>          
          <span class="badge badge-pill <%= task.status %>"><%= task.status %></span>
          <p class="card-text"><%= task.description %></p>
          <% if user_signed_in? && current_user.admin? %>
          <%= link_to "Редактировать", edit_project_task_path(@project, task),
          :class => 'btn btn-outline-primary btn-sm' %>

          <%= link_to "Удалить", [task.project, task], method: :delete, data:
          {confirm: "Хотите удалить задачу?"}, :class =>'btn btn-outline-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </div>
