<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%=devise_error_messages!%>

      <div class="form-group">
        <%= f.label :first_name, "Имя" %><br />
        <%= f.text_field :first_name, autofocus: true, :class => "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, "Фамилия" %><br />
        <%= f.text_field :last_name, autofocus: true, :class => "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control"  %>
      </div>

      

      <div class="form-group">
        <%= f.label :password, "Пароль"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> символов минимум)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", :class => "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Повторите пароль" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control"  %>
      </div>

      <div class="action">
        <%= f.submit "Зарегистрироваться", :class => "btn btn-outline-success" %>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
